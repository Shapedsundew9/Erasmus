{
    "database": {
        "type": "dict",
        "required": true,
        "schema": {
            "type": {
                "type": "string",
                "allowed": ["BYTEA", "BIGINT", "INTEGER", "TIMESTAMP", "VARCHAR"],
                "required": true
            },
            "null": {
                "type": "boolean",
                "default": false
            },
            "properties": {
                "type": "string",
                "default": null,
                "nullable": true
            }
        }
    },
    "definition": {
        "type": "dict",
        "required": true,
        "schema": {
            "location":{
                "type": "list",
                "required": true,
                "allowed": ["WORKER", "MICROBIOME", "BIOME"],
                "minlength": 1,
                "maxlength": 3
            },
            "immutable": {
                "type": "boolean",
                "default": true,
                "check_with": "valid_immutable"
            }
        }
    },
    "compressed": {
        "type": "boolean",
        "required": true,
        "default": false,
        "check_with": "valid_compressed"
    },
    "sha256": {
        "type": "boolean",
        "required": true,
        "default": false,
        "check_with": "valid_sha256"
    },
    "description": {
        "type": "string",
        "maxlength": 1024              
    },
    "codec": {
        "type": "dict",
        "required": false,
        "check_with": "valid_codec",
        "valuerules": {
            "type": "integer",
            "min": 0
        }
    }
}